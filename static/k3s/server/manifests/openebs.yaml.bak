apiVersion: v1
kind: Namespace
metadata:
  name: openebs
---
apiVersion: helm.cattle.io/v1
kind: HelmChart
metadata:
  name: openebs
  namespace: kube-system
spec:
  chart: https://%{KUBERNETES_API}%/static/charts/openebs-3.6.0.tgz
  targetNamespace: openebs
  valuesContent: |-
    localprovisioner:
      enableDeviceClass: false
      enableHostpathClass: true
      basePath: /var/lib/replicated/openebs/local # TODO: configurable
      hostpathClass:
        name: local
        isDefaultClass: true
    ndm:
      enabled: false
    ndmOperator:
      enabled: false
